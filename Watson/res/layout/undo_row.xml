<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/toast_frame"
    android:gravity="center"
    android:layout_margin="@dimen/undo_layout_margin"
    android:orientation="horizontal" >

    <TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/undo_text_padding"
        android:text="@string/ui_deleted"
        android:textColor="#ffffff"
        android:textSize="@dimen/undo_text_size" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/undo_text_padding"
        android:background="#ffffff" />

    <Button
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_undo"
        android:drawablePadding="@dimen/undo_drawable_padding"
        android:padding="@dimen/undo_text_padding"
        android:text="@string/ui_undo"
        android:textColor="#ffffff"
        android:textSize="@dimen/undo_text_size" />

</LinearLayout>